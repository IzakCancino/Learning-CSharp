<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="First interface" Height="300" Width="500">

    <Grid x:Name="RootGrid">
        <StackPanel Width="200">
            <TextBlock TextAlignment="Center" FontWeight="Bold" Margin="20">Hello!</TextBlock>
            <TextBlock TextAlignment="Center" Foreground="DarkRed" Margin="5">Please click below :)</TextBlock>
            <Button Content="Click here" Width="90" Height="25" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
